<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.FavoriteMapper">
    <insert id="insert" parameterType="com.example.entity.Favorite" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        INSERT INTO favorite_songlist (user_id, songlist_id, create_time)
        VALUES (#{userId}, #{songlistId}, #{createTime})
    </insert>
    <delete id="deleteById">
        DELETE FROM favorite_songlist WHERE id = #{id}
    </delete>
    <select id="selectById" resultType="com.example.entity.Favorite">
        SELECT * FROM favorite_songlist WHERE id = #{id}
    </select>
    <select id="selectAll" resultType="com.example.entity.Favorite">
        SELECT * FROM favorite_songlist
        <where>
            <if test="userId != null">
                AND user_id = #{userId}
            </if>
        </where>
        ORDER BY create_time DESC
    </select>
</mapper> 